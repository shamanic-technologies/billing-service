{
  "openapi": "3.0.0",
  "info": {
    "title": "Billing Service API",
    "version": "0.1.0",
    "description": "Manages billing accounts, credit balance, deductions, and Stripe integration for the Conductor platform."
  },
  "servers": [
    {
      "url": "http://localhost:3012"
    }
  ],
  "components": {
    "schemas": {
      "BillingMode": {
        "type": "string",
        "enum": [
          "trial",
          "byok",
          "payg"
        ]
      },
      "BillingAccount": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "orgId": {
            "type": "string",
            "format": "uuid"
          },
          "appId": {
            "type": "string"
          },
          "billingMode": {
            "$ref": "#/components/schemas/BillingMode"
          },
          "creditBalanceCents": {
            "type": "integer"
          },
          "reloadAmountCents": {
            "type": "integer",
            "nullable": true
          },
          "reloadThresholdCents": {
            "type": "integer",
            "nullable": true
          },
          "hasPaymentMethod": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "orgId",
          "appId",
          "billingMode",
          "creditBalanceCents",
          "reloadAmountCents",
          "reloadThresholdCents",
          "hasPaymentMethod",
          "createdAt",
          "updatedAt"
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        },
        "required": [
          "error"
        ]
      },
      "BalanceResponse": {
        "type": "object",
        "properties": {
          "balance_cents": {
            "type": "integer"
          },
          "billing_mode": {
            "$ref": "#/components/schemas/BillingMode"
          },
          "depleted": {
            "type": "boolean"
          }
        },
        "required": [
          "balance_cents",
          "billing_mode",
          "depleted"
        ]
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "amount_cents": {
            "type": "integer"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "created_at": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "deduction",
              "credit",
              "reload"
            ]
          }
        },
        "required": [
          "id",
          "amount_cents",
          "description",
          "created_at",
          "type"
        ]
      },
      "TransactionsResponse": {
        "type": "object",
        "properties": {
          "transactions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Transaction"
            }
          },
          "has_more": {
            "type": "boolean"
          }
        },
        "required": [
          "transactions",
          "has_more"
        ]
      },
      "UpdateModeRequest": {
        "type": "object",
        "properties": {
          "mode": {
            "type": "string",
            "enum": [
              "byok",
              "payg"
            ]
          },
          "reload_amount_cents": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMinimum": true
          }
        },
        "required": [
          "mode"
        ]
      },
      "DeductResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "balance_cents": {
            "type": "integer",
            "nullable": true
          },
          "billing_mode": {
            "$ref": "#/components/schemas/BillingMode"
          },
          "depleted": {
            "type": "boolean"
          }
        },
        "required": [
          "success",
          "balance_cents",
          "billing_mode",
          "depleted"
        ]
      },
      "DeductRequest": {
        "type": "object",
        "properties": {
          "amount_cents": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMinimum": true
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "app_id": {
            "type": "string",
            "minLength": 1
          },
          "user_id": {
            "type": "string",
            "format": "uuid"
          }
        },
        "required": [
          "amount_cents",
          "description",
          "app_id",
          "user_id"
        ]
      },
      "CheckoutResponse": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "session_id": {
            "type": "string"
          }
        },
        "required": [
          "url",
          "session_id"
        ]
      },
      "CreateCheckoutRequest": {
        "type": "object",
        "properties": {
          "success_url": {
            "type": "string",
            "format": "uri"
          },
          "cancel_url": {
            "type": "string",
            "format": "uri"
          },
          "reload_amount_cents": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMinimum": true
          }
        },
        "required": [
          "success_url",
          "cancel_url",
          "reload_amount_cents"
        ]
      }
    },
    "parameters": {}
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "service": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "status",
                    "service"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/v1/accounts": {
      "get": {
        "summary": "Get or create billing account for org",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-api-key",
            "in": "header"
          },
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "x-org-id",
            "in": "header"
          },
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-app-id",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Billing account",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BillingAccount"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/accounts/balance": {
      "get": {
        "summary": "Quick balance check from DB cache",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-api-key",
            "in": "header"
          },
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "x-org-id",
            "in": "header"
          },
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-app-id",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Balance info",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BalanceResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/accounts/transactions": {
      "get": {
        "summary": "Get credit transaction history from Stripe",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-api-key",
            "in": "header"
          },
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "x-org-id",
            "in": "header"
          },
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-app-id",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/accounts/mode": {
      "patch": {
        "summary": "Switch billing mode",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-api-key",
            "in": "header"
          },
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "x-org-id",
            "in": "header"
          },
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-app-id",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateModeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated account",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BillingAccount"
                }
              }
            }
          },
          "400": {
            "description": "Invalid transition",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/credits/deduct": {
      "post": {
        "summary": "Deduct credits from org balance",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-api-key",
            "in": "header"
          },
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "x-org-id",
            "in": "header"
          },
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-app-id",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeductRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deduction result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeductResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/checkout-sessions": {
      "post": {
        "summary": "Create Stripe Checkout session for PAYG setup",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-api-key",
            "in": "header"
          },
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "x-org-id",
            "in": "header"
          },
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "x-app-id",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCheckoutRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Checkout session URL",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CheckoutResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/webhooks/stripe/{appId}": {
      "post": {
        "summary": "Stripe webhook handler (per-app)",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "appId",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "Webhook processed"
          },
          "400": {
            "description": "Invalid signature"
          }
        }
      }
    }
  }
}